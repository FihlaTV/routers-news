<div class="col-md-12">
    <!-- section title -->
    <div class="section-title">
        <h2 class="title">Latest Video</h2>
        <div id="nav-carousel-2" class="custom-owl-nav pull-right"></div>
    </div>
    <!-- /section title -->

    <!-- owl carousel 2 -->
    <div id="owl-carousel-2" class="owl-carousel owl-theme">
        {{#each data.videos}}
        <article class="article thumb-article">
            <div class="article-img">
                <img src="{{this.thumbnail.secure_url}}" alt="">
            </div>
            <div class="article-body">
                <ul class="article-info">
                    <li class="article-category">
                        <a href="/video/{{this.slug}}">Video</a>
                    </li>
                    <li class="article-type">
                        <i class="fa fa-video-camera"></i>
                    </li>
                </ul>
                <h3 class="article-title">
                    <a href="/video/{{this.slug}}">{{this.title}}</a>
                </h3>
                <ul class="article-meta">
                    <li>
                        <i class="fa fa-clock-o"></i> {{this.date}}</li>
                </ul>
            </div>
        </article>
        {{/each}}
    </div>
    <!-- /owl carousel 2 -->
</div>